<%= form_for(@talk, :url => {:action => 'create'}) do |f| %>
    <% if @talk.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@talk.errors.count, "error") %> 件のエラーが発生しました</h2>

          <ul>
            <% @talk.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :detail %><br>
      <%= f.text_area :detail %>
    </div>
    <div class="field">
      <% if @talk.image? %>
          <div class="thumbnail">
            <%= image_tag @talk.image.url %>
          </div>
      <% end %>
      <%= f.label :image %><br>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>

    <div class="actions">
      <%= f.submit '作成' %>
    </div>
<% end %>
