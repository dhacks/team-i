<%= link_to '新規投稿', new_talks_path %>

<% @talks.each do |t| %>
    <div>
      <% if t.image? %>
        <% image_tag t.image.thumb.url %>
      <% end %>
    <p><%= t.title %></p>
    <p><%= t.detail %></p>
    <p><%= t.user.name %></p>
    <p><%= t.created_at.strftime('%Y/%m/%d %H:%M') %></p>
    </div>
<% end %>
